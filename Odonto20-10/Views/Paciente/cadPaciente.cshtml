@model Odonto20_10.Models.ModelPaciente
@{
    List<String> Sexo = new List<String>();
    Sexo.Add("F");
    Sexo.Add("M");
}
<h2 style="text-align:center;">Novo Paciente</h2>

<div class="center">
    @using (Html.BeginForm("cadPaciente", "Paciente", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group">
                @Html.LabelFor(model => model.nmPaciente, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.nmPaciente, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.nmPaciente, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.CPFPaciente, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.CPFPaciente, new { htmlAttributes = new { @class = "form-control", required = "required", maxlength = "11" } })
                    @Html.ValidationMessageFor(model => model.CPFPaciente, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.emailPaciente, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.emailPaciente, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.emailPaciente, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.telPaciente, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.telPaciente, new { htmlAttributes = new { @class = "form-control", required = "required", maxlength = "11" } })
                    @Html.ValidationMessageFor(model => model.telPaciente, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.sexoPaciente, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownListFor(model => model.sexoPaciente, new MultiSelectList(Sexo), htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.sexoPaciente, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group center">
                <div class="col-md-10">
                    @ViewBag.msg <br />
                </div>
            </div>


            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Salvar" class="btn btn-success" />
                </div>
            </div>

        </div>
    }
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

