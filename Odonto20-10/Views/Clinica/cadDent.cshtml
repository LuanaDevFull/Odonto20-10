@model Odonto20_10.Models.ModelDentista

<h2 style="text-align: center; margin-top: 50px">Cadastrar Dentista</h2>

<div class="center">
    @using (Html.BeginForm("cadDent", "Clinica", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.nmDentista, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <input type="text" id="txtNmDent" name="txtNmDent" class="form-control" required />
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.codEspecialidade, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownListFor(model => model.codEspecialidade, ViewBag.especialidades as IEnumerable<SelectListItem>, htmlAttributes: new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group center">
                <div class="col-md-10">
                    @ViewBag.msg <br />
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Salvar" class="btn btn-success" />
                </div>
            </div>
        </div>
    }
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
